// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// schema.prisma
// schema.prisma

model User {
  id          Int      @id @default(autoincrement())
  email       String
  username    String
  displayname String
  avatar      String
  doubts      Doubt[]
}

model Doubt {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique
  question  Question?
  answers   Answer[]
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Question {
  questid     Int      @id @default(autoincrement())
  title  String
  desc   String
  code   String?
  lang   String
  doubt  Doubt @relation(fields: [questid], references: [id])
}

model Answer {
  id            Int      @id @default(autoincrement())
  title         String
  desc          String
  code          String?
  doubt         Doubt     @relation(fields: [doubtId], references: [id])
  displayname   String?
  avatar        String?
  doubtId       Int
}
